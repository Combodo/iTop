var chart = c3.generate({
    bindto: d3.select('#my_chart_{{ oUIBlock.GetParameter('sId') }}'),
    data: {
        json: {{ oUIBlock.GetParameter('sJson')|raw }},
        keys: {
            x: 'label',
            value: ["value"]
        },
        onclick: function (d) {
            var aURLs = {{ oUIBlock.GetParameter('sJSURLs')|raw }};
            window.location.href = aURLs[d.index];
        },
        selection: {
            enabled: true
        },
        type: 'bar'
    },
    axis: {
        x: {
            tick: {
                culling: {max: 25}, // Maximum 24 labels on x axis (2 years).
                centered: true,
                rotate: 90,
                multiline: false
            },
            type: 'category'   // this needed to load string x value
        }
    },
    grid: {
        y: {
            show: true
        }
    },
    legend: {
        show: false
    },
    tooltip: {
        grouped: false,
        format: {
            title: function() { return '' },
            name: function (name, ratio, id, index) {
                var aNames = {{ oUIBlock.GetParameter('sJSNames')|raw }};
                return aNames[index];
            }
        }
    }
});

if (typeof(charts) === "undefined")
{
    charts = [];
}
charts.push(chart);