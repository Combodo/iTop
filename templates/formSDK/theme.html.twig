
{% extends 'base.html.twig' %}

{% block stylesheets %}

    <style>
        .theme_viewer{
        display: flex;
        }

        .theme{
        width: 100%;
        padding: 20px;
        }

        .theme1 h4{
        color: #cc8d17;
        border-bottom: 1px #cc8d17 solid;
        margin-bottom: 20px;
        }
        .theme2 h4{
        color: #c7306e;
        border-bottom: 1px #c7306e solid;
        margin-bottom: 20px;
        }
    </style>

{% endblock %}

{% block body %}

    <div class="container-fluid p-5">

        {# specific form theme #}
        {% if theme1 is defined %}
            {% form_theme form1 theme1 %}
        {% endif %}
        {% if theme2 is defined %}
            {% form_theme form2 theme2 %}
        {% endif %}

        <h3>Form SDK : Thème Comparator</h3>

        <div class="theme_viewer">

            <div class="theme theme1">

                <h4>Thème 1: {{ name1 }}</h4>

                {{ form_start(form1) }}
                {{ form_widget(form1) }}
                <input type="submit" class="btn btn-primary">
                {{ form_end(form1) }}

            </div>


            <div class="theme theme2">

                <h4>Thème 2: {{ name2 }}</h4>

                {{ form_start(form2) }}
                {{ form_widget(form2) }}
                <input type="submit" class="btn btn-primary">
                {{ form_end(form2) }}

            </div>


        </div>


    </div>

    <script>

        // auto install widget based on dom data
        $(document).ready(function(e){
            iTopFormWidgetFactory.AutoInstall();
        });

    </script>

{% endblock %}