{% extends "base.html.twig" %}

{% block login_content %}
	<div id="login-content">
		<div id="login-title">
			<h1>{{ sTitle }}</h1>
			<p><a href="{{ sUrl }}">{{ sMessage }}</a></p>
		</div>
	</div>
{% endblock %}

{% block ready_script %}
    {{ parent() }}

    // Redirect after 2s so the user has time to read the message
    setTimeout(function() { window.location.href = '{{ sUrl }}'; }, 1000);
{% endblock %}